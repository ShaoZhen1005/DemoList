<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar" />

    <Button
        android:id="@+id/wx_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登陆" />

    <ImageView
        android:id="@+id/image_wx_headimgurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_one_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/activity_text_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#333333"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="第一次请求"
                        android:textColor="@color/activity_text_blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_one_request"
                    style="@style/wx_login_text_style" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/activity_text_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#333333"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="第二次请求"
                        android:textColor="@color/activity_text_blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_two_request"
                    style="@style/wx_login_text_style" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_three_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/activity_text_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#333333"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="第三次请求"
                        android:textColor="@color/activity_text_blue"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_three_request"
                    style="@style/wx_login_text_style" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
